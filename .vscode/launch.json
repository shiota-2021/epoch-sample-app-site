    "version": "0.2.0",
    "configurations": [
      {
        "name": "Python: Flask",
        "type": "python",
        "request": "launch",
        "program": "/app/goods.py",
        "env": {
            "FLASK_APP": "/app/goods.py",
            "FLASK_ENV": "development"
        },
        "cwd": "/app",
        "pathMappings": [
          {
            "localRoot": "${workspaceFolder}/epoch-sample-app/api_app",
            "remoteRoot": "/app"
          }
        ],
        "noDebug": true,
        "args": [
            "run",
            "--no-debugger"
        ],
        "jinja": true,
        "justMyCode": true
      },
      {
        "name": "[DEBUG] Python: Flask",
        "type": "python",
        "request": "launch",
        "program": "/app/goods.py",
        "env": {
            "FLASK_APP": "/app/goods.py",
            "FLASK_ENV": "development"
        },
        "cwd": "/app",
        "pathMappings": [
          {
            "localRoot": "${workspaceFolder}/epoch-sample-app/api_app",
            "remoteRoot": "/app"
          }
        ],
        "args": [
            "run",
            "--no-debugger"
        ],
        "jinja": true,
        "justMyCode": true
      },
