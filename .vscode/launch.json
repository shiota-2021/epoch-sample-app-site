    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Remote Attach",
            "type": "python",
            "request": "attach",
            "connect": {
              "host": "localhost",
              "port": 5678
            },
            "pathMappings": [
              {
                "localRoot": "${workspaceFolder}/epoch-sample-app/api_app",
                "remoteRoot": "/app"
              }
            ]
        },
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/epoch-sample-app/api_app/goods.py",
            "env": {
                "FLASK_APP": "${workspaceFolder}/epoch-sample-app/api_app/goods.py",
                "FLASK_ENV": "development"
            },
            "cwd": "${workspaceFolder}/epoch-sample-app/api_app",
            "args": [
                "run",
                "--no-debugger"
            ],
            "jinja": true,
            "justMyCode": true
        }
    ]
}